<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="149dp"
                android:src="@drawable/background_saeta" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bienvenidos a Sistema de Autotransporte y Enlace de Tabasco."
                android:gravity="center"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="20dp"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SAETA Villahermosa"
                android:textSize="20sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="En esta aplicacion encontrarás información del transporte público de Villahermosa."
                android:padding="20dp"
                android:gravity="fill"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Conéctate con nosotros"
                android:textSize="16sp"
                android:padding="20dp"/>

            <Button
                style="@style/Widget.Material3.Button.TextButton"
                android:id="@+id/textButton_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Me gusta en facebook"
                android:padding="20dp"
                android:gravity="left"
                app:icon="@drawable/ic_facebook"
                />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                style="@style/Widget.Material3.Button.TextButton"
                android:id="@+id/textButton_gmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contacta con nosotros"
                android:padding="20dp"
                android:gravity="left"
                app:icon="@drawable/ic_mail"
                />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                style="@style/Widget.Material3.Button.TextButton"
                android:id="@+id/textButton_blog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visita nuestra pagina"
                android:padding="20dp"
                android:gravity="left"
                app:icon="@drawable/ic_blogger"
                />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Version 0.0.1"
                android:padding="20dp"/>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>